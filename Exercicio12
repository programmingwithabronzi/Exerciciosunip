using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication2
{
    class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("\nPrograma que mostra o módulo de um número");

            //Declaração de variáveis

            int x;

            //Entrada de dados

            Console.Write("\nDigite um valor para x: ");
            x = int.Parse(Console.ReadLine());

            //Processamento e saída

            if (x >= 0)
            {

                Console.WriteLine("\n{0}", x);
            }
            else 
            {
            
            Console.WriteLine("\n{0}", x * (-1));
            
            }
            

          Console.ReadKey();      
        
        
        }
    }
}
